---
// src/pages/admin.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin - QHATU">
  <div class="container mx-auto px-4 max-w-6xl pt-20">
    <div class="bg-white rounded-xl shadow-lg border border-gray-200">
      <div class="p-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Panel de Administración</h1>
        <p class="text-lg text-gray-600 mb-6">Aquí podrás aprobar o rechazar las fotos subidas por los usuarios.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div class="text-sm text-gray-500 mb-1">Fotos Pendientes</div>
            <div class="text-2xl font-bold text-gray-800">12</div>
            <div class="text-xs text-gray-500 mt-1">Esperando revisión</div>
          </div>
          
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div class="text-sm text-gray-500 mb-1">Fotos Aprobadas</div>
            <div class="text-2xl font-bold text-gray-800">45</div>
            <div class="text-xs text-gray-500 mt-1">En el mapa</div>
          </div>
          
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div class="text-sm text-gray-500 mb-1">Fotos Rechazadas</div>
            <div class="text-2xl font-bold text-gray-800">3</div>
            <div class="text-xs text-gray-500 mt-1">Sin datos GPS</div>
          </div>
        </div>
        
        <div class="mt-8">
          <button class="bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition-colors font-medium">
            Ver Fotos Pendientes
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>